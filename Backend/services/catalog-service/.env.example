# Application Configuration
NODE_ENV=development
PORT=3003
API_PREFIX=api/v1

# Database Configuration
DATABASE_URL="postgresql://catalog:catalog@localhost:5432/catalog_db"

# RabbitMQ Configuration
RABBITMQ_URL="amqp://localhost:5672"
RABBITMQ_QUEUE="catalog_queue"
RABBITMQ_EXCHANGE="publications_exchange"
RABBITMQ_ROUTING_KEY="publication.*"

# Consul Configuration
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_URL="http://localhost:8500"

# Cache Configuration
CACHE_TTL=300000
CACHE_MAX_ITEMS=100

# Rate Limiting
RATE_LIMIT_TTL=60000
RATE_LIMIT_REQUESTS=100