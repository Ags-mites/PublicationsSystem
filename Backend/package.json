{
  "name": "publications-microservices",
  "version": "1.0.0",
  "description": "Academic microservices project for publication management",
  "scripts": {
    "start": "./scripts/start-backend.sh",
    "start:dev": "./scripts/start-dev.sh",
    "db:setup": "echo 'Deprecated. Handled by container entrypoints.'",
    "db:setup:dev": "echo 'Deprecated. Handled by container entrypoints.'",
    "db:setup:prod": "echo 'Deprecated. Handled by container entrypoints.'",
    "docker:build": "docker compose build --no-cache",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:clean": "docker compose down -v && docker system prune -f",
    "docker:restart": "docker compose restart",
    "docker:ps": "docker compose ps",
    "infra": "docker compose up -d cockroachdb rabbitmq consul",
    "dev": "./scripts/dev-all.sh",
    "dev:only": "./scripts/dev-only.sh",
    "dev:services": "./scripts/dev-services.sh",
    "stop": "./scripts/stop-all.sh",
    "migrate": "./scripts/deploy-migrations.sh",
    "db:init": "./scripts/init-databases.sh",
    "db:create": "./scripts/create-databases.sh",
    "db:init:docker": "./scripts/init-databases-docker.sh",
    "docker:build:all": "./scripts/docker-build.sh all",
    "docker:up:init": "./scripts/start-with-init.sh"
  },
  "workspaces": [
    "services/*",
    "consul-service"
  ],
  "devDependencies": {
    "@types/node": "^20.3.1",
    "typescript": "^5.1.3",
    "concurrently": "^8.0.0"
  },
  "packageManager": "pnpm@10.13.1+sha512.37ebf1a5c7a30d5fabe0c5df44ee8da4c965ca0c5af3dbab28c3a1681b70a256218d05c81c9c0dcf767ef6b8551eb5b960042b9ed4300c59242336377e01cfad"
}
